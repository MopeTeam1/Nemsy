<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/mypage_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="96dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/mypage_icon_inactive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypage_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:text="내정보"
        android:fontFamily="@font/intel"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mypage_icon"
        app:layout_constraintStart_toStartOf="@id/mypage_icon"
        app:layout_constraintTop_toTopOf="@id/mypage_icon" />


    <ImageButton
        android:id="@+id/law_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="96dp"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/law_icon_active"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/law"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="발의법률안"
        android:fontFamily="@font/intel"
        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@id/law_icon"
        app:layout_constraintStart_toStartOf="@id/law_icon"
        app:layout_constraintTop_toTopOf="@id/law_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>